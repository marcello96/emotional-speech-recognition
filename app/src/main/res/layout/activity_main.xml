<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mfccLabel"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="176dp"
        android:layout_marginBottom="8dp"
        android:text="@string/mfccLabel"
        app:layout_constraintBottom_toTopOf="@+id/pitchResultLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.277" />

    <TextView
        android:id="@+id/pitchResultLabel"
        android:layout_width="143dp"
        android:layout_height="34dp"
        android:layout_marginTop="232dp"
        android:text="@string/pitchLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emotionText"
        android:layout_width="124dp"
        android:layout_height="37dp"
        android:layout_marginBottom="8dp"
        android:text="@string/emotionLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pitchResultLabel"
        app:layout_constraintVertical_bias="0.06" />

</android.support.constraint.ConstraintLayout>